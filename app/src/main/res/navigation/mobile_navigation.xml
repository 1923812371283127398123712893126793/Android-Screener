<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_resolution">

    <fragment
        android:id="@+id/navigation_resolution"
        android:name="top.jiecs.screener.ui.resolution.ResolutionFragment"
        android:label="@string/resolution"
        tools:layout="@layout/fragment_resolution" />

    <fragment
        android:id="@+id/navigation_frame_rate"
        android:name="top.jiecs.screener.ui.framerate.FrameRateFragment"
        android:label="@string/frame_rate"
        tools:layout="@layout/fragment_frame_rate" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="top.jiecs.screener.ui.settings.SettingsFragment"
        android:label="@string/settings"
        tools:layout="@layout/fragment_settings" />
</navigation>