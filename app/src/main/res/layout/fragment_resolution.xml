<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.resolution.ResolutionFragment" >

    <TextView
        android:id="@+id/text_resolution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/number_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
		android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@+id/text_resolution"
        android:hint="@string/height" >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/number_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
		android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@+id/number_height"
        android:hint="@string/weight" >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.slider.Slider
        android:id="@+id/silder_scale"
		android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
		android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@+id/number_weight"
        android:stepSize="1"
        android:valueFrom="0"
        android:valueTo="4" />
		
	<com.google.android.material.button.MaterialButton
		android:id="@+id/bt_apply"
		android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
		android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@+id/silder_scale"
        android:text="@string/apply" />

</androidx.constraintlayout.widget.ConstraintLayout>
